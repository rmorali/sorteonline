    <td><%= palpite.teste_numeros_primos %></td>
    <td><%= palpite.teste_numeros_consecutivos %></td>
    <td><%= palpite.teste_quadrantes %></td>
    <td><%= palpite.teste_multiplos %></td>
    <td><%= palpite.pontos %></td>
